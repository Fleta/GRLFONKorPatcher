<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="team.hatsan.grlfonkorpatcher.MainActivity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_weight="0.05"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@drawable/shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dis_curversion"
            style="@style/Versions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="텍스트 변경일" />

        <TextView
            android:id="@+id/text_curDate"
            style="@style/Versions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="N/A" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_space"
            style="@style/Grids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="GUIAPK 서버" />

        <TextView
            android:id="@+id/textView7"
            style="@style/Grids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:text="설치된 버전" />

        <TextView
            android:id="@+id/textView6"
            style="@style/Grids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:text="최신 버전" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dis_dskyversion"
            style="@style/Versions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="운영사 버전" />

        <TextView
            android:id="@+id/text_dskyVersion"
            style="@style/Versions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:text="N/A" />

        <TextView
            android:id="@+id/text_newdsky"
            style="@style/Versions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:text="N/A" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dis_biliversion"
            style="@style/Versions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="비리비리 버전" />

        <TextView
            android:id="@+id/text_biliVersion"
            style="@style/Versions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:text="N/A" />

        <TextView
            android:id="@+id/text_newBili"
            style="@style/Versions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:text="N/A" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="공지"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:text="주의 : 인게임 데이터 업데이트를 적용한 후 패치해주세요.\n데이터 업데이트 전 패치를 하게 되면\n패치가 적용되지 않습니다."
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="소녀전선 앱은 최신버전 유지를 권장합니다."
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한글패치 제공" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://frozens.tk/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btn_dsky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="patchdsky"
            android:text="운영사"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/btn_bili"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="patchbili"
            android:text="비리비리"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

</LinearLayout>
